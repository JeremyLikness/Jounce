<UserControl x:Class="SimpleNavigation.Views.GreenCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
        <Ellipse Width="400" Height="400" Fill="Green"/>
        <TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Text}"/>
    </Grid>
</UserControl>
